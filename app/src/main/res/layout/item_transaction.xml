<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/md_theme_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">

        <!-- Category Icon Background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_icon_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:cardBackgroundColor="@color/chart_1">

            <!-- Category Icon/Emoji -->
            <TextView
                android:id="@+id/tv_category_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="24sp"
                tools:text="ðŸ”" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Category Name -->
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_small"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/card_icon_background"
            app:layout_constraintStart_toEndOf="@id/card_icon_background"
            app:layout_constraintEnd_toStartOf="@id/tv_amount"
            tools:text="AlimentaciÃ³n" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_category"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintEnd_toEndOf="@id/tv_category"
            tools:text="Almuerzo restaurante" />

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:textSize="@dimen/text_size_tiny"
            android:textColor="@color/md_theme_onSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintEnd_toEndOf="@id/tv_category"
            app:layout_constraintBottom_toBottomOf="@id/card_icon_background"
            tools:text="05 Dic 2024" />

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/card_icon_background"
            app:layout_constraintBottom_toBottomOf="@id/card_icon_background"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="-$25.50"
            tools:textColor="@color/expense_red" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>