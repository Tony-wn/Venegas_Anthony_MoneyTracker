<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/md_theme_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">

        <!-- Profile Section -->
        <TextView
            android:id="@+id/tv_profile_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_settings"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal">

                <!-- Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_normal" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Budget Section -->
        <TextView
            android:id="@+id/tv_budget_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/budget_settings"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/card_profile"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_budget_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal">

                <!-- Monthly Budget Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_budget"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_monthly_budget"
                    app:prefixText="$ "
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_budget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Start Day Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_start_day"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:hint="@string/hint_start_day"
                    app:suffixText="del mes"
                    app:helperText="Entre 1 y 31"
                    app:layout_constraintTop_toBottomOf="@id/til_budget"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_start_day"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Alert Threshold -->
                <TextView
                    android:id="@+id/tv_threshold_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:text="@string/alert_threshold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/md_theme_onSurface"
                    app:layout_constraintTop_toBottomOf="@id/til_start_day"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_threshold_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/md_theme_primary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/tv_threshold_label"
                    app:layout_constraintBottom_toBottomOf="@id/tv_threshold_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="80%" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_threshold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:valueFrom="50"
                    android:valueTo="100"
                    android:stepSize="5"
                    android:value="80"
                    app:layout_constraintTop_toBottomOf="@id/tv_threshold_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Currency Section -->
        <TextView
            android:id="@+id/tv_currency_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/currency_settings"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/card_budget"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_currency_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal">

                <!-- Currency Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_currency"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_currency"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/act_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="@dimen/text_size_normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Update Exchange Rates Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_update_rates"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:text="@string/update_exchange_rates"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintTop_toBottomOf="@id/til_currency"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management Section -->
        <TextView
            android:id="@+id/tv_data_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/data_management"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/card_currency"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_data_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_normal">

                <!-- Reset Data Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset_data"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_data"
                    android:textColor="@color/expense_red"
                    android:textSize="@dimen/text_size_normal"
                    app:strokeColor="@color/expense_red"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:text="⚠️ Esta acción eliminará todas las transacciones"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/md_theme_onSurfaceVariant"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/btn_reset_data"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_settings"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@string/save"
            android:textSize="@dimen/text_size_medium"
            app:cornerRadius="@dimen/button_radius"
            app:layout_constraintTop_toBottomOf="@id/card_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>