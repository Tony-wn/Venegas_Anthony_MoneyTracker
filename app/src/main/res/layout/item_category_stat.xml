<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@color/md_theme_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal">

        <!-- Category Icon -->
        <TextView
            android:id="@+id/tv_category_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="ðŸ”" />

        <!-- Category Name -->
        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/md_theme_onSurface"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_category_icon"
            app:layout_constraintStart_toEndOf="@id/tv_category_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_amount"
            tools:text="AlimentaciÃ³n" />

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            app:trackThickness="6dp"
            app:trackCornerRadius="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_category_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_category_icon"
            app:layout_constraintStart_toStartOf="@id/tv_category_name"
            app:layout_constraintEnd_toEndOf="@id/tv_category_name"
            tools:progress="65" />

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/md_theme_primary"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tv_category_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="$450.00" />

        <!-- Percentage -->
        <TextView
            android:id="@+id/tv_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/md_theme_onSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/tv_amount"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="35%" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>